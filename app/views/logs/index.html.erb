<div class="jumbotron">
  <h1 class="display-4" style="text-align:center"><%= @league.name %> Table</h1>  
  <hr class="my-4">
  <div style="text-align:center">
  <%= link_to 'Back To Teams', league_path(@league.id), :class => 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Team</th>
      <th>MP</th>
      <th>W</th>
      <th>L</th>
      <th>D</th>
      <th>GF</th>
      <th>GA</th>
      <th>GD</th>
      <th>Pts</th>
    </tr>
  </thead>
  <tbody>
    <% @table_data.each_with_index do |td, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= td[:team] %></td>
        <td><%= td[:matches_played] %></td>
        <td><%= td[:won] %></td>
        <td><%= td[:lost] %></td>
        <td><%= td[:drew] %></td>
        <td><%= td[:goals_for] %></td>
        <td><%= td[:goals_against] %></td>
        <td><%= td[:goal_difference] %></td>
        <td><%= td[:points] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back To Teams', league_path(@league.id), :class => 'btn btn-outline-primary' %>


