<%= form_with model: @league, local: true do |form| %>
 
  <% if @league.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@league.errors.count, "error") %> prohibited
        this league from being saved:
      </h2>
      <ul>
        <% @league.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, :class => 'form-control col-md-6' %>
  </p>
 
  <p>
    <%= form.label :country %><br>
    <%= form.text_field :country, :class => 'form-control col-md-6' %>
  </p>
 
  <p>
    <%= form.submit :class => 'btn btn-outline-success' %> | <%= link_to 'Back To Leagues', leagues_path, :class => 'btn btn-outline-primary' %>
  </p>
 
<% end %>
 
